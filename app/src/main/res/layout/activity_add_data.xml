<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddData">
    <ImageView
        android:id="@+id/select_product_img"
        android:layout_width="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/select_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"/>
    <EditText
        android:id="@+id/select_product_name"
        android:layout_width="match_parent"
        android:inputType="textImeMultiLine"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:hint="PName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/select_product_img"
        android:textColor="#000"
        android:background="@drawable/input_design"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/select_product_desc"
        android:layout_width="match_parent"
        android:inputType="textImeMultiLine"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:hint="Product Description...."
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:textAlignment="center"
        android:layout_below="@id/select_product_name"
        android:textColor="#000"
        android:background="@drawable/input_design"
        android:layout_height="200dp"/>
    <Button
        android:id="@+id/add_new_product_btn"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient"
        android:textColor="#000"
        android:text="Add Product"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_product_desc"
        />
</RelativeLayout>