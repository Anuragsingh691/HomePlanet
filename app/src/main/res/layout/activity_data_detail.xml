<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text=" Name"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:fontFamily="@font/maitree"/>
        <ImageView
            android:id="@+id/product_img_detail"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@id/product_title_detail"
            android:layout_margin="20dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_desc_detail"
            android:layout_width="match_parent"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/product_img_detail"
            android:text=" Product Description"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:fontFamily="@font/maitree"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/speech_btn"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_below="@id/product_desc_detail"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/mic2"/>
    </RelativeLayout>


</ScrollView>